<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddObjectFragment">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/titleLabel"
        app:layout_constraintStart_toStartOf="@+id/guiObjVer1"
        app:layout_constraintTop_toTopOf="@+id/guiObjHor1" />

    <EditText
        android:id="@+id/edit_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autofillHints=""
        app:layout_constraintEnd_toStartOf="@+id/guiObjVer2"
        app:layout_constraintStart_toStartOf="@+id/guiObjVer1"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/urgencyLabel"
        app:layout_constraintStart_toStartOf="@+id/guiObjVer1"
        app:layout_constraintTop_toBottomOf="@+id/edit_title" />

    <Spinner
        android:id="@+id/spinner_urgency"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:theme="@null"
        app:layout_constraintEnd_toStartOf="@+id/guiObjVer2"
        app:layout_constraintStart_toStartOf="@+id/guiObjVer1"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/categoryLabel"
        app:layout_constraintStart_toStartOf="@+id/guiObjVer1"
        app:layout_constraintTop_toBottomOf="@+id/spinner_urgency" />

    <Spinner
        android:id="@+id/spinner_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:theme="@null"
        app:layout_constraintEnd_toStartOf="@+id/guiObjVer2"
        app:layout_constraintStart_toStartOf="@+id/guiObjVer1"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/edit_about"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:importantForAutofill="no"
        android:inputType="textMultiLine|text"
        android:labelFor="@id/textView5"
        app:layout_constraintEnd_toStartOf="@+id/guiObjVer2"
        app:layout_constraintStart_toStartOf="@+id/guiObjVer1"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />


    <EditText
        android:id="@+id/edit_lon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:importantForAutofill="no"
        android:inputType="textMultiLine|text"
        android:labelFor="@id/textView5"
        app:layout_constraintEnd_toStartOf="@+id/guiObjVer2"
        app:layout_constraintStart_toStartOf="@+id/guiObjVer1"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/latitudeLabel"
        app:layout_constraintStart_toStartOf="@+id/guiObjVer1"
        app:layout_constraintTop_toBottomOf="@+id/edit_about" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/aboutLabel"
        app:layout_constraintStart_toStartOf="@+id/guiObjVer1"
        app:layout_constraintTop_toBottomOf="@+id/spinner_category" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/longitudeLabel"
        app:layout_constraintStart_toStartOf="@+id/guiObjVer1"
        app:layout_constraintTop_toBottomOf="@+id/edit_lat" />

    <Button
        android:id="@+id/button_getCoords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get coordinates"
        app:layout_constraintBottom_toTopOf="@+id/button_addObject"
        app:layout_constraintEnd_toStartOf="@+id/guiObjVer2"
        app:layout_constraintStart_toStartOf="@+id/guiObjVer1"
        app:layout_constraintTop_toBottomOf="@+id/edit_lon" />

    <EditText
        android:id="@+id/edit_lat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:importantForAutofill="no"
        android:inputType="textMultiLine|text"
        android:labelFor="@id/textView5"
        app:layout_constraintEnd_toStartOf="@+id/guiObjVer2"
        app:layout_constraintStart_toStartOf="@+id/guiObjVer1"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button_addObject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Request"
        app:layout_constraintBottom_toTopOf="@+id/guiObjHorBottom"
        app:layout_constraintEnd_toStartOf="@+id/guiObjVer2"
        app:layout_constraintStart_toStartOf="@+id/guiObjVer1" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addRequestTitle"
        android:textColor="#2196F3"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/guiObjHor1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiObjHor1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiObjHorBottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiObjVer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiObjVer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       app:layout_constraintGuide_percent="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>